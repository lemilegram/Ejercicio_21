<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("partials/bootstrap") %>
    <link rel="stylesheet" href="/css/styles.css" />
    <title><%= article.title %></title>
  </head>

  <body>
    <%- include("partials/loggedNav.ejs") %>
    <section class="hero d-flex flex-column justify-content-center align-items-center">
      <h2><%= article.title %></h2>
      <span
        >Creado por <%= article.user.firstname %>
        <!-- prettier-ignore -->
        <%=article.user.lastname %> el <%= article.createdAt %></span
      >
    </section>

    <div class="container col-6 mt-4">
      <p><%= article.content %></p>
      <hr />
    </div>

    <div class="d-flex flex-column mx-auto mt-3" style="width: 600px">
      <div id="loggedSecction">
        <% if(isAuthenticated) {%>
          <%- include("partials/comments.ejs") %>
          <% } %>
      </div>
      <h3>Comments</h3>
      <% for (const comment of comments) { %>
      <div>
        <p><%= comment.content %></p>
        <% const authorId = comment.userId %>
        <small
          >Creado por <%= users[authorId - 1].firstname %> <%= users[authorId - 1].lastname
          %></small
        >
      </div>
      <%}%>
    </div>

    <%- include("partials/footer") %>
  </body>
</html>
